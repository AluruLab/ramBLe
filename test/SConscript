##
# @file SConscript
# @brief Provides functionality for building the test suite.
import os

Import('env')

gTestLibs = [
             'gtest',
             'pthread'
            ]

srcFiles = [
            'test.cpp',
            ]

built = False
# Check if the header and the library files can be located
conf = Configure(env)
if not conf.CheckCXXHeader('gtest/gtest.h'):
  Return('built')
for lib in gTestLibs:
  if not conf.CheckLib(lib, language='C++'):
    Return('built')
env = conf.Finish()

env.Program(target=env.testName, source=srcFiles)

env.Install(env.testDir, env.testName)
built = True
Return('built')
